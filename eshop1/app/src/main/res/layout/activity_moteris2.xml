<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC"
    tools:context=".moteris">

    <Button
        android:id="@+id/foto1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="8dp"

        android:background="@drawable/s3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/d1"
        android:layout_width="214dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="#000000"
        android:text="Adidas PureBOOST"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toEndOf="@+id/foto1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/p1"
        android:layout_width="103dp"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:textColor="#001111"
        android:textSize="20dp"
        android:text="135€"
        app:layout_constraintStart_toEndOf="@+id/foto1"
        app:layout_constraintTop_toBottomOf="@+id/d1" />

    <Button
        android:id="@+id/buy1"
        android:layout_width="89dp"
        android:layout_height="41dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:background="#ffffff"
        android:text="INFO"
        app:layout_constraintStart_toEndOf="@+id/p1"
        app:layout_constraintTop_toBottomOf="@+id/d1" />

    <Button
        android:id="@+id/foto2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:textColor="#000000"
        android:layout_marginStart="32dp"
        android:layout_marginTop="28dp"

        android:background="@drawable/s4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foto1" />


    <TextView
        android:id="@+id/d2"
        android:layout_width="214dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="57dp"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="#000000"
        android:text="Adidas Superstar Slip"

        app:layout_constraintStart_toEndOf="@+id/foto2"
        app:layout_constraintTop_toBottomOf="@+id/p1" />

    <TextView
        android:id="@+id/p2"
        android:layout_width="103dp"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:textColor="#001111"
        android:textSize="20dp"
        android:text="80€"

        app:layout_constraintStart_toEndOf="@+id/foto2"
        app:layout_constraintTop_toBottomOf="@+id/d2" />

    <Button
        android:id="@+id/buy2"
        android:layout_width="89dp"
        android:layout_height="41dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text="INFO"
        android:background="#ffffff"
        app:layout_constraintStart_toEndOf="@+id/p2"
        app:layout_constraintTop_toBottomOf="@+id/d2" />

    <Button
        android:id="@+id/foto3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/s5"
        android:layout_marginStart="32dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foto2" />

    <TextView
        android:id="@+id/d3"
        android:layout_width="214dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="57dp"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="#000000"
        android:text="Adidas Pharrell "
        app:layout_constraintStart_toEndOf="@+id/foto3"
        app:layout_constraintTop_toBottomOf="@+id/p2" />

    <TextView
        android:id="@+id/p3"
        android:layout_width="103dp"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:textColor="#001111"
        android:textSize="20dp"
        android:text="90€"

        app:layout_constraintStart_toEndOf="@+id/foto3"
        app:layout_constraintTop_toBottomOf="@+id/d3" />

    <Button
        android:id="@+id/buy3"
        android:layout_width="89dp"
        android:layout_height="41dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:background="#ffffff"
        android:text="INFO"
        app:layout_constraintStart_toEndOf="@+id/p3"
        app:layout_constraintTop_toBottomOf="@+id/d3" />

    <Button
        android:id="@+id/foto4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/s6"
        android:layout_marginStart="32dp"
        android:layout_marginTop="28dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foto3" />

    <TextView
        android:id="@+id/d4"
        android:layout_width="214dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="57dp"
        android:text="Ellesse Reef"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/foto4"
        app:layout_constraintTop_toBottomOf="@+id/p3" />

    <TextView
        android:id="@+id/p4"
        android:layout_width="103dp"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:textColor="#001111"
        android:textSize="20dp"
        android:text="20€"
        app:layout_constraintStart_toEndOf="@+id/foto4"
        app:layout_constraintTop_toBottomOf="@+id/d4" />

    <Button
        android:id="@+id/buy4"
        android:layout_width="89dp"
        android:layout_height="41dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:background="#ffffff"
        android:text="INFO"
        app:layout_constraintStart_toEndOf="@+id/p4"
        app:layout_constraintTop_toBottomOf="@+id/d4" />

    <Button
        android:id="@+id/foto5"
        android:layout_width="90dp"
        android:layout_height="90dp"
android:background="@drawable/s7"
        android:layout_marginStart="32dp"
        android:layout_marginTop="28dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foto4" />

    <TextView
        android:id="@+id/d5"
        android:layout_width="214dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="57dp"
        android:text="Ellesse Pato"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="#000000"

        app:layout_constraintStart_toEndOf="@+id/foto5"
        app:layout_constraintTop_toBottomOf="@+id/p4" />

    <TextView
        android:id="@+id/p5"
        android:layout_width="103dp"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:textColor="#001111"
        android:textSize="20dp"
        android:text="20€"
        app:layout_constraintStart_toEndOf="@+id/foto3"
        app:layout_constraintTop_toBottomOf="@+id/d5" />

    <Button
        android:id="@+id/buy5"
        android:layout_width="89dp"
        android:layout_height="41dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:background="#ffffff"
        android:text="INFO"
        app:layout_constraintStart_toEndOf="@+id/p5"
        app:layout_constraintTop_toBottomOf="@+id/d5" />


    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <Button
        android:id="@+id/next2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#ffffff"
        android:text="Next Page"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p5" />


</android.support.constraint.ConstraintLayout>