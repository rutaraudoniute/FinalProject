<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/galas"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/reginfoto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/profile"/>

    <EditText
        android:id="@+id/register_email"
        android:drawableLeft="@drawable/username"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reginfoto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:hint="Email"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/register_password"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/password"
        android:layout_below="@+id/register_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Password"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/register_password_conirm"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/password"
        android:layout_below="@+id/register_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Password"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/register_buttonas"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_password_conirm"
        android:layout_marginTop="20dp"
        android:text="REGISTER"
        android:layout_centerHorizontal="true"

        />

</RelativeLayout>